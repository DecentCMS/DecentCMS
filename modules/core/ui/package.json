{
  "name": "decent-core-ui",
  "version": "0.0.0",
  "description": "Core UI composition API for DecentCMS",
  "services": {
    "shape": {
      "path": "./lib/shape",
      "feature": "shape"
    },
    "shape-item-promise-handler": {
      "path": "./lib/shape-item-promise-handler",
      "feature": "shape"
    },
    "render-stream": {
      "path": "./lib/render-stream",
      "feature": "render-stream"
    },
    "placement-strategy": {
      "path": "./lib/file-placement-strategy",
      "feature": "file-placement-strategy",
      "dependencies": [
        "decent-core-io"
      ]
    },
    "zone-handler": {
      "path": "./lib/zone-handler",
      "feature": "zone-handler"
    },
    "view-engine": {
      "path": "./lib/code-view-engine",
      "feature": "code-view-engine"
    },
    "rendering-strategy": {
      "path": "./lib/template-rendering-strategy",
      "feature": "template-rendering-strategy",
      "dependencies": [
        "decent-core-io"
      ]
    }
  },
  "features": {
    "shape": {
      "name": "Shape",
      "description": "Shape manipulation API for UI composition"
    },
    "render-stream": {
      "name": "Render Stream",
      "description": "Recursive, asynchronous stream that view engines must render to."
    },
    "file-placement-strategy": {
      "name": "File-Based Placement Strategy",
      "description": "Dispatches shapes according to descriptions in files."
    },
    "zone-handler": {
      "name": "Zone Handler",
      "description": "Recursively handles zone shapes."
    },
    "code-view-engine": {
      "name": "Code View Engine",
      "description": "A view engine that uses plain JavaScript code."
    },
    "template-rendering-strategy": {
      "name": "Template Rendering Strategy",
      "description": "Renders shapes using template files."
    }
  },
  "main": "./index.js",
  "scripts": {
    "test": "./test/index"
  },
  "author": "Bertrand Le Roy",
  "license": "MIT",
  "devDependencies": {
    "chai": "*",
    "mocha": "*",
    "proxyquire": "*"
  },
  "dependencies": {
    "htmlencode": "*"
  }
}
